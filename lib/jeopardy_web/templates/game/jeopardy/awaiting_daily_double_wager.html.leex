<div class="daily-double">
    <%= if @game.buzzer_player == @player.name do %>
        <%= live_component @socket, JeopardyWeb.WagerComponent,
        id: "1", min: 5, max: 10, changeset: :wager %>
    <% else %>
        <h6><%= @player.name %> hit the Daily Double!</h6>
        <p>Waiting for them to make their wager</p>
    <% end %>
</div>
