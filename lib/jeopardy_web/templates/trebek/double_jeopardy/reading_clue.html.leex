<div class="trebek reading_clue">
    <div class="content">
        <div class="clue">
            <span><%= raw(@current_clue.clue_text) %></span>
        </div>

        <div class="instructions">
            <p>
                Read the clue, then click below to allow players to buzz in.
            </p>
        </div>
    </div>
    <div class="action-area">
        <%= submit "Start timer", "phx-click": "start_clue_timer", "phx-target": @myself %>
    </div>
</div>
